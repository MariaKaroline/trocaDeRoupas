<!DOCTYPE html>
<html lang="pt-br">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta http-equiv="X-UA-Compatible" content="ie=edge">
  <title>Loja de Roupas Usadas</title>
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
  <link rel="stylesheet" href="style.css">
</head>
<body>
  <header>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav">
          <li class="nav-item active">
            <a class="nav-link" href="#">Início<span class="sr-only">(current)</span></a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="shop.html">Loja</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="login.html">Login</a>
          </li>
        </ul>
      </div>
    </nav>
    <div class="jumbotron jumbotron-fluid">
      <div class="container">
        <h1 class="display-4"><%= pageTitle %></h1>
        <hr class="my-4">
        <a class="btn btn-primary btn-lg" href="shop.html" role="button">Explorar a Coleção</a>
      </div>
    </div>
  </header>
  
  <main class="container">
    <h2>Roupas em Destaque</h2>
    <div class="row">
      <% roupasEmDestaque.forEach(function(roupa) { %>
        <div class="col-md-4 mb-3">
          <img src="<%= roupa.imagem %>" alt="roupa" class="img-fluid">
          <div>
            <p><strong>Descrição:</strong> <%= roupa.descricao %></p>
            <p><strong>Tamanho:</strong> <%= roupa.tamanho %></p>
            <p><strong>Preço:</strong> R$ <%= roupa.preco.toFixed(2) %></p>
          </div>
        </div>
      <% }); %>
    </div>
  </main>
  
  <footer class="bg-light mt-5">
    <div class="container">
      <div class="row">
        <div class="col-md-6">
          <h4>Loja de Roupas Usadas</h4>
          <p>Endereço: Rua da Loja, 123 - Cidade, Estado</p>
          <p>Telefone: (11) 1234-5678</p>
        </div>
        <div class="col-md-6">
          <h4>Navegação</h4>
          <ul class="list-unstyled">
            <li><a href="#">Início</a></li>
            <li><a href="shop.html">Loja</a></li>
            <li><a href="login.html">Login</a></li>
          </ul>
        </div>
      </div>
    </div>
  </footer>
  
  <!-- Scripts do Bootstrap e scripts personalizados -->
  <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.3.1/dist/js/bootstrap.bundle.min.js" integrity="sha384-JZR6SpejhO6wJnRHCr+3naytcyGpUA+P7rW9JQb5IeVKx2m/RVFaMzed5QpDkah" crossorigin="anonymous"></script>
  <script src="script.js"></script>
</body>
</html>
